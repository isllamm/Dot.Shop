<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="@dimen/_100sdp"

    android:layout_marginVertical="@dimen/_8sdp"
    android:background="@drawable/card_bg">


    <TextView
        android:id="@+id/tv_offer_name"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="IPhone 13 Pro Max 512g"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_offer_discount"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/discount"
        android:textColor="@color/black"

        android:textSize="@dimen/_10ssp"
        app:layout_constraintStart_toStartOf="@+id/tv_offer_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_offer_name" />

    <TextView
        android:id="@+id/tv_offer_discount_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:gravity="center"
        android:text="35%"
        android:textColor="@color/green"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toStartOf="@+id/tv_offer_discount"
        app:layout_constraintTop_toBottomOf="@+id/tv_offer_discount" />

    <TextView
        android:id="@+id/tv_offer_discount_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_2sdp"
        android:gravity="center"
        android:text="off"
        android:textColor="@color/green"
        android:textSize="@dimen/_9ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_offer_discount_num"
        app:layout_constraintStart_toEndOf="@+id/tv_offer_discount_num"
        app:layout_constraintTop_toTopOf="@+id/tv_offer_discount_num" />


    <ImageView
        android:id="@+id/iv_offer"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_4sdp"
        android:src="@drawable/iphone_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>