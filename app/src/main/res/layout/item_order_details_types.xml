<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_v"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:src="@drawable/phone"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_phone_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="Iphone 13 pro max, 256GB ,Blue ,5G"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:lines="1"
        app:layout_constraintStart_toEndOf="@+id/iv_v"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_phone_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apple"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/gray_800"
        app:layout_constraintStart_toStartOf="@+id/tv_phone_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone_name" />

    <TextView
        android:id="@+id/tv_phone_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1100$"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tv_phone_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone_type" />



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@color/gray_400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone_price" />

</androidx.constraintlayout.widget.ConstraintLayout>