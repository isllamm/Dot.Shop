<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_cat"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:src="@drawable/iphone_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_cat_name"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="Phones"
        app:layout_constraintEnd_toEndOf="@+id/image_cat"
        app:layout_constraintStart_toStartOf="@+id/image_cat"
        app:layout_constraintTop_toBottomOf="@+id/image_cat" />

</androidx.constraintlayout.widget.ConstraintLayout>