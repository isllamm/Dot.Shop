                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/_10sdp"
                android:text="55 Reviews "
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

